{
  "name": "utas-writing-practice",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "build:docker": "next build",
    "build:production": "NODE_ENV=production next build",
    "start": "next start",
    "start:production": "NODE_ENV=production next start",
    "lint": "eslint",
    "websocket": "node websocket-server.js",
    "dev:full": "concurrently \"npm run websocket\" \"npm run dev\"",
    "docker:build": "docker build -t utas-writing-practice .",
    "docker:run": "docker run -p 3000:3000 -p 8080:8080 utas-writing-practice",
    "docker:dev": "docker build -f Dockerfile.dev -t utas-writing-practice-dev . && docker run -p 3000:3000 -v $(pwd):/app utas-writing-practice-dev"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "socket.io-client": "^4.8.1",
    "uuid": "^10.0.0",
    "wav": "^1.0.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
