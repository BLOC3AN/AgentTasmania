# ==========================================
# Multi-Agent System - Environment Variables
# ==========================================

# Application Configuration
DEBUG=true
LOG_LEVEL=DEBUG
API_HOST=0.0.0.0
API_PORT=8000

# LLM Provider Configuration
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.0-flash
LLM_TEMPERATURE=0.2
LLM_TOP_P=0.2
LLM_TOP_K=40
LLM_SEED=42

# API Keys
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration (Choose one option)
# Option 1: MongoDB Atlas (Cloud) - Recommended for production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/multi_agent_system?retryWrites=true&w=majority
MONGODB_DATABASE=multi_agent_system

# Option 2: Local MongoDB (Docker)
# MONGODB_URI=mongodb://localhost:27017/
# MONGODB_DATABASE=multi_agent_system

# =============================================================================
# REDIS CONFIGURATION (Session & Memory Management)
# =============================================================================

# Redis URL - Choose one of the following:
# Option 1: Docker Redis (Default for development)
REDIS_URL=redis://redis:6379

# Option 2: Local Redis
# REDIS_URL=redis://localhost:6379

# Option 3: Redis Cloud/External
# REDIS_URL=redis://username:password@host:port

# Redis Database & Authentication
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# QDRANT VECTOR DATABASE CONFIGURATION
# =============================================================================

# Qdrant URL - Choose one of the following:
# Option 1: Local Qdrant (Docker) - Default for development
QDRANT_LOCAL_URL=http://qdrant:6333

# Option 2: Qdrant Cloud - For production
# QDRANT_URL=https://your-cluster-url.qdrant.tech:6333
# QDRANT_CLOUD_API_KEY=your_qdrant_cloud_api_key_here

# Collection name for storing vectors
QDRANT_COLLECTION=agent_data

# =============================================================================
# CACHE & MEMORY CONFIGURATION
# =============================================================================

# Cache TTL Settings (in seconds)
USER_CACHE_TTL=3600
SESSION_CACHE_TTL=7200
CONTEXT_CACHE_TTL=1800
MESSAGE_CACHE_TTL=1800
PROCESSING_STATUS_TTL=300

# Memory System Settings
MAX_CONTEXT_MESSAGES=50
CONTEXT_DAYS=30
AUTO_SUMMARIZE_THRESHOLD=50
CONTEXT_WINDOW_SIZE=20

# =============================================================================
# S3 STORAGE CONFIGURATION (Optional)
# =============================================================================

# S3 Compatible Storage
S3_ENDPOINT=https://your-s3-endpoint.com
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET_NAME=your_bucket_name

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security Settings
GRAFANA_PASSWORD=your_secure_grafana_password

# Optional: Custom domain and SSL
DOMAIN=your-domain.com
SSL_EMAIL=your-email@domain.com

# =============================================================================
# SERVICE URLS (Internal Docker Network)
# =============================================================================

# Internal service URLs for Docker Compose
MCP_SERVER_URL=http://mcp-server:8001
DATABASE_URL=http://database:8002
EMBEDDING_URL=http://embedding:8005

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend API URLs (accessible from browser)
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8003

# =============================================================================
# DEVELOPMENT vs PRODUCTION SETUP
# =============================================================================

# For Local Development (Docker Compose):
# 1. Use REDIS_URL=redis://redis:6379
# 2. Use QDRANT_LOCAL_URL=http://qdrant:6333
# 3. Use MongoDB Atlas or local MongoDB
# 4. Run: docker-compose up

# For Production:
# 1. Set proper MongoDB Atlas URI
# 2. Configure Redis Cloud or dedicated Redis instance
# 3. Set up Qdrant Cloud with API key
# 4. Configure S3 storage for file uploads
# 5. Set strong passwords and secure API keys

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Local Development Example:
# REDIS_URL=redis://redis:6379
# MONGODB_URI=mongodb://localhost:27017/
# QDRANT_LOCAL_URL=http://qdrant:6333

# Production Example:
# REDIS_URL=redis://username:password@redis-cloud-host:port
# MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/db
# QDRANT_URL=https://cluster.qdrant.tech:6333
# QDRANT_CLOUD_API_KEY=your_api_key
